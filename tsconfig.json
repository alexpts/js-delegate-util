{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "baseUrl": "./src",
    "outDir": "./dist",
    "noEmitOnError": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "sourceMap": true,

    "declarationDir": "./dist/types",
    "declaration": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
